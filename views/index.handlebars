<div class="container">

  <!-- Header Row -->
  <div class="row">
    <div class="col-lg-12 text-center">
      <img src="../public/assets/img/kylo-ren-burger.jpg" width="400px" id="kylo-ren-burger">
      <h1>Star Wars Burgers! (DUH!)</h1>
    </div>
  </div>

  <!-- Three Col Row -->
  <div class="row">
    <!-- Row One -->
    <div class="col-lg-4">
      {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='menu'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
    </div>

    <!-- Row Two -->
    <div class="col-lg-4">
      {{#each burgers}}
         {{#if this.devoured}}
           <div class='devouredBurger'>
             <div>
               {{this.burger_name}}
             </div>
           </div>
         {{/if}}
       {{/each}}
    </div>

    <!-- Row Three -->
    <div class="col-lg-4">
      <form action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name">
        <button type="submit" class="addBurgerBtn">Add The Burger</button>
      </form>
    </div>

  </div>

</div>
